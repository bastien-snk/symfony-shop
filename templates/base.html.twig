<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        {% endblock %}
        {% block head_js %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">Boutique Custom</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
                        aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path("accueil") }}">Accueil <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path("categorie_index") }}">Categories <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path("produit_index") }}">Produits <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        {% if not is_granted('ROLE_USER') %}
                            <a href="{{ path("app_login") }}" class="btn btn-primary">Se connecter</a>
                        {% else %}
                            <a href="{{ path("app_logout") }}" class="btn btn-warning">Se d√©connecter</a>
                        {% endif %}
                    </form>
                </div>
            </nav>

            <div class="col-12">
                <div class="row">
                    <div class="col-12">
                        <div clas=jumbotron">
                            <div class="text text-center">
                                Bienvenue sur la boutique de vente tah les gommettes
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <duv class="row">
                {% for i in 1..5 %}
                    <div class="col-1">
                        <img src="{{  asset('images/gommettes'~i~'.jpg') }}" class="rounded img-fluid" alt="gommettes rondes">
                    </div>
                {% endfor %}
            </duv>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
